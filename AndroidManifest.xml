<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.infinispan.android.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" 
            android:theme="@android:style/Theme.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ItemsActivity"
            android:label="@string/title_activity_main" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.infinispan.android.app.MainActivity" />
        </activity>
        <activity
            android:name=".ConfigureActivity"
            android:label="@string/title_activity_configure" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.infinispan.android.app.MainActivity" />
        </activity>
        <activity
            android:name=".AddActivity"
            android:label="@string/title_activity_add" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.infinispan.android.app.ListActivity" />
        </activity>
    </application>

</manifest>