<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="Main Options" >
        <ListPreference
            android:title="Clustering mode"
            android:summary="Local"
            android:defaultValue="local"
            android:entries="@array/listOptions"
            android:entryValues="@array/listValues"
            android:key="mode" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="store"
            android:summaryOff="Turn on the cache store"
            android:summaryOn="Turn off the cache store"
            android:title="Cache store" />
    </PreferenceCategory>

</PreferenceScreen>